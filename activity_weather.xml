<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weatherRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101014"
    tools:context=".WeatherActivity">

    <!-- Top title bar -->
    <TextView
        android:id="@+id/tvWeatherPageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather Status"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Weather Card -->
    <LinearLayout
        android:id="@+id/layoutWeatherCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/bg_card"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tvWeatherPageTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvWeatherConditionDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Condition: -"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#80CBC4" />

        <TextView
            android:id="@+id/tvWeatherTemperatureDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Temperature: -- Â°C"
            android:textSize="16sp"
            android:textColor="#FFAB91" />

        <TextView
            android:id="@+id/tvWeatherHumidityDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Humidity: -- %"
            android:textSize="15sp"
            android:textColor="#B0BEC5" />

        <TextView
            android:id="@+id/tvWeatherHintDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Live data from bike environment module"
            android:textSize="11sp"
            android:textColor="#78909C" />

    </LinearLayout>

    <!-- Back hint -->
    <TextView
        android:id="@+id/tvBackHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap back to return to dashboard"
        android:textSize="11sp"
        android:textColor="#B0BEC5"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
