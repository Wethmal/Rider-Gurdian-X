<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101014"
    tools:context=".MainActivity">

    <!-- Top gradient -->
    <View
        android:id="@+id/topGradient"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:background="@drawable/bg_top_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvAppTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RiderGurdianX"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tvAppSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart Bike Assistant Dashboard"
            android:textSize="14sp"
            android:paddingTop="4dp"
            android:textColor="#B0BEC5" />
    </LinearLayout>

    <!-- Rider chip -->
    <TextView
        android:id="@+id/tvRiderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chip"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:text="Rider: Online"
        android:textColor="#E0F7FA"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp" />

    <!-- Scroll area -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvRiderStatus"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Row 1: Helmet + Speed -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/cardHelmetStatus"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_card"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/tvHelmetTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Helmet"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/tvHelmetStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Connected"
                        android:textSize="14sp"
                        android:textColor="#80CBC4" />

                    <TextView
                        android:id="@+id/tvHelmetHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Tap to view helmet display"
                        android:textSize="11sp"
                        android:textColor="#B0BEC5" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardSpeed"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_card"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/tvSpeedTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Speed"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/tvCurrentSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="0 km/h"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#FFAB91" />

                    <TextView
                        android:id="@+id/tvSpeedHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Live speed from bike module"
                        android:textSize="11sp"
                        android:textColor="#B0BEC5" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 2: Location + Emergency -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/cardCurrentLocation"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_card"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/tvLocationTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Location"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/tvLocationShort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Tap to open map"
                        android:textSize="13sp"
                        android:textColor="#B0BEC5" />

                    <TextView
                        android:id="@+id/tvLocationHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Live GPS from RiderGurdianX"
                        android:textSize="11sp"
                        android:textColor="#78909C" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardEmergency"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_card_accent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/tvEmergencyTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emergency"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/tvEmergencySubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="SOS / Contacts"
                        android:textSize="14sp"
                        android:textColor="#FFE082" />

                    <TextView
                        android:id="@+id/tvEmergencyHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Quick access during accidents"
                        android:textSize="11sp"
                        android:textColor="#FFECB3" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 3: Weather + Ultrasonic -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/cardWeather"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_card"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/tvWeatherTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weather"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/tvWeatherCondition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Condition: -"
                        android:textSize="14sp"
                        android:textColor="#80CBC4" />

                    <TextView
                        android:id="@+id/tvWeatherTempHumidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="-- °C • -- %RH"
                        android:textSize="11sp"
                        android:textColor="#B0BEC5" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardUltrasonic"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_card"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/tvUltrasonicTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance Sensor"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/tvUltrasonicDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="-- cm"
                        android:textSize="14sp"
                        android:textColor="#FFAB91" />

                    <TextView
                        android:id="@+id/tvUltrasonicStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Tap to view details"
                        android:textSize="11sp"
                        android:textColor="#B0BEC5" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 4: MPU6050 + Alcohol -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/cardMpu6050"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_card"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/tvMpuTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bike Attitude"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/tvMpuStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Tilt: --°"
                        android:textSize="13sp"
                        android:textColor="#80CBC4" />

                    <TextView
                        android:id="@+id/tvMpuHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Used for accident detection"
                        android:textSize="11sp"
                        android:textColor="#B0BEC5" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardAlcohol"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_card_accent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/tvAlcoholTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alcohol Sensor"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/tvAlcoholStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Detected: --"
                        android:textSize="14sp"
                        android:textColor="#FFE082" />

                    <TextView
                        android:id="@+id/tvAlcoholHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Breath level from MQ-3"
                        android:textSize="11sp"
                        android:textColor="#FFECB3" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 5: Live Cam -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/cardLiveCam"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_card"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/tvLiveCamTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Live Cam"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/tvLiveCamStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Tap to view stream"
                        android:textSize="13sp"
                        android:textColor="#B0BEC5" />

                    <TextView
                        android:id="@+id/tvLiveCamHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Helmet / bike camera video"
                        android:textSize="11sp"
                        android:textColor="#78909C" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 6: Profile + Settings -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/cardProfile"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_card"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/tvProfileTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rider Profile"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/tvProfileHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Login / Sign up"
                        android:textSize="13sp"
                        android:textColor="#B0BEC5" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardSettings"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_card"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/tvSettingsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Settings"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/tvSettingsHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Sensors • Alerts • Theme"
                        android:textSize="13sp"
                        android:textColor="#B0BEC5" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom nav -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#15151B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/navDashboard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Dashboard"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/navMap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Map"
            android:textSize="13sp"
            android:textColor="#B0BEC5" />

        <TextView
            android:id="@+id/navMore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="More"
            android:textSize="13sp"
            android:textColor="#B0BEC5" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
